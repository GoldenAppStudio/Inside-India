<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/quizBg">


    <LinearLayout
        android:id="@+id/quizResultHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Quiz Result"
            android:textColor="@color/correctQuestion"
            android:textSize="35sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/quizResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/quizResultHeading"
        android:orientation="vertical"
        android:layout_marginTop="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            >

            <TextView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Total Questions"
                android:textSize="17sp"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="30"
                android:textColor="@color/white"
                android:textSize="17sp"

                android:gravity="end"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="30dp"
            >

            <TextView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Correct Answers"
                android:textSize="17sp"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="27"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:gravity="end"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="30dp"
            >

            <TextView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Incorrect Answers"
                android:textSize="17sp"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:gravity="end"
                />
        </LinearLayout>  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        >

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Time Taken"
            android:textSize="17sp"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="03:33"
            android:textColor="@color/white"
            android:textSize="17sp"

            android:gravity="end"
            />
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quizResult"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:gravity="center"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/question_border"
            android:backgroundTint="@color/correctQuestion"
            android:text="Play Again"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/question_border"
            android:backgroundTint="@color/incorrectQuestion"
            android:text="Exit"
            />


    </LinearLayout>
</RelativeLayout>