<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="All Time Best Score:"
        android:textColor="@color/black"
        android:textSize="25sp"

        />

    <LinearLayout
        android:id="@+id/first_row"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/score"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"

        >

        <RelativeLayout
            android:id="@+id/score_question_container"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/score"
            android:layout_gravity="start"
            android:background="@drawable/circle"
            android:gravity="center"
            android:textColor="@color/black">


            <TextView
                android:id="@+id/question_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:gravity="center"
                android:text="30"

                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/questionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="questions"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <RelativeLayout
            android:id="@+id/score_time_container"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/score"
            android:layout_gravity="end"
            android:background="@drawable/circle"
            android:gravity="center">


            <TextView
                android:id="@+id/score_time_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:gravity="center"
                android:text="02:40"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Time"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_row"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_row"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"

        >

        <RelativeLayout
            android:id="@+id/score_correct_container"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/score"
            android:layout_gravity="start"
            android:background="@drawable/circle"
            android:gravity="center"

            >


            <TextView
                android:id="@+id/correct_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:gravity="center"
                android:text="36"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/correct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="correct"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <RelativeLayout
            android:id="@+id/score_incorrect_container"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/score"
            android:layout_gravity="end"
            android:background="@drawable/circle"
            android:gravity="center">


            <TextView
                android:id="@+id/incorrect_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/incorrect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Incorrect"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/second_row"
        android:layout_marginTop="100dp"
        android:elevation="10dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonbordershadow"
            android:text="Play Quiz"
            android:textAllCaps="false" />
    </LinearLayout>

</RelativeLayout>